---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Header from "@/components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col justify-between items-center min-h-screen bg-[#101010] text-white p-4 py-8"
  >
    <Header />
    <main class="flex-grow w-full max-w-2xl lg:py-20">
      <slot />
    </main>
    <footer class="max-w-2xl w-full py-4">
      <p class="text-balance text-sm leading-loose text-[#a1a1aa]">
        Built by <a
          href="https://www.linkedin.com/in/renanleonel/"
          class="underline">renanleonel</a
        >. The source code is available on <a
          href="https://github.com/renanleonel/renanleonel.io"
          class="underline">Github</a
        >.
      </p>
    </footer>
  </body>
</html>
