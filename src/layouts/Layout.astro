---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Header from "@/components/Header.astro";
import Theme from "@/components/Theme.astro";

import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";

import { ClientRouter } from "astro:transitions";

const siteUrl = import.meta.env.SITE || Astro.url.origin;
const ogImageUrl = new URL("/logo.png", siteUrl).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="renanleonel" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="renanleonel" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:type" content="image/png" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="renanleonel" />
    <meta name="twitter:image" content={ogImageUrl} />
    <ClientRouter />
    <Analytics />
    <SpeedInsights />
  </head>
  <body
    class="flex flex-col justify-between items-center min-h-screen dark:bg-primary text-neutral-700 dark:text-neutral-200 px-4 md:p-4"
  >
    <Header />
    <main class="flex-grow w-full max-w-2xl lg:py-20">
      <slot />
    </main>
    <footer class="flex justify-between max-w-2xl w-full py-4">
      <p
        class="md:text-balance text-xs md:text-sm leading-loose text-neutral-600 dark:text-neutral-300"
      >
        built by
        <a href="https://www.linkedin.com/in/renanleonel/" class="underline"
          >renanleonel</a
        >. code is available on <a
          href="https://github.com/renanleonel/renanleonel.com"
          class="underline">Github</a
        >.
      </p>
      <Theme />
    </footer>
  </body>
</html>
