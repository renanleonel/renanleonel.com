---
import "@/styles/globals.css";
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="projects | renan leonel">
  <div class="flex flex-col gap-4">
    <h1 class="text-xl font-bold">Projects</h1>
    <a href="https://github.com/renanleonel/quark">
      <div class="flex items-center gap-4">
        <h2 class="text-lg font-semibold underline">quark</h2>
        <Badge className="gap-1">
          <span class="animate-pulse rounded-full bg-green-600 h-2 w-2"></span>
          in development
        </Badge>
      </div>
      <p class="text=sm">
        open source application to streamline the ticketing process for
        technical projects
      </p>
    </a>
    <a href="https://github.com/renanleonel/renanleonel.com">
      <div class="flex items-center gap-4">
        <h2 class="text-lg font-semibold underline">blog</h2>
      </div>
      <p class="text=sm">this one!</p>
    </a>

    <div>
      <div class="flex items-center gap-4">
        <h2 class="blur-sm text-lg font-semibold underline">new project</h2>
        <Badge className="gap-1">soon!</Badge>
      </div>
      <p class="blur-sm text=sm">
        still no info here, you can close the devtools lol
      </p>
    </div>
  </div>
</Layout>
